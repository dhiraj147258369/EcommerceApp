<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border_background"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ddd"
        app:tint="#ffffff"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_heart"
        android:layout_width="18dp"
        android:layout_height="18dp"/>

    <TextView
        android:id="@+id/coupen_title"
        android:layout_toRightOf="@id/ddd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="Discount Coupen"
        android:layout_marginTop="14dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/coupen_validity"
        android:background="@color/white"
     android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="till 13 August 2020"
        android:layout_marginRight="2dp"
        android:layout_marginTop="14dp"
        android:textColor="#3F51B5"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/coupen_body"
        android:layout_below="@id/ddd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="efobno efdvn 3 rgsvjn vjb g"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/ddd"
        android:layout_marginBottom="8dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"/>

</RelativeLayout>
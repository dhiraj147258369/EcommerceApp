<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@color/white"
    android:padding="4dp">

    <TextView
        android:id="@+id/dd"
        android:text="PRICE DETAILS"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_below="@id/dd"
        android:layout_height="1dp"
        android:layout_margin="2dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/price_txt"
        android:text="price (2 items)"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@id/divider4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/price_amt"
        android:text="Rs.18440/-"
        android:layout_below="@id/divider4"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/delivery_txt"
        android:text="Delivery"
        android:layout_below="@id/price_txt"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/delivery_amt"
        android:text="Rs.60/-"
        android:layout_below="@id/price_txt"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/divider5"
        android:layout_width="match_parent"
        android:layout_below="@id/delivery_txt"
        android:layout_height="1dp"
        android:layout_marginVertical="4dp"
        android:layout_marginHorizontal="2dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/totalamt_txt"
        android:text="TOTAL AMOUNT"
        android:layout_below="@id/divider5"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/total_amt"
        android:text="Rs.18500/-"
        android:layout_below="@id/divider5"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/divider6"
        android:layout_width="match_parent"
        android:layout_below="@id/totalamt_txt"
        android:layout_height="1dp"
        android:layout_marginVertical="4dp"
        android:layout_marginHorizontal="2dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/saved_amt"
        android:text="SAVED AMOUNT IS Rs.500/-"
        android:layout_below="@id/divider6"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>
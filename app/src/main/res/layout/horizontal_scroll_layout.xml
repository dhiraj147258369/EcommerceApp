<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#E3D7D7"
    android:layout_margin="8dp"
    android:id="@+id/horizontal_scroll_container"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/horizontal_scrolllayout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_margin="8dp"
        android:textColor="@color/black"
        android:text="Deals of the day" />

    <Button
        android:id="@+id/h_scroll_viewall_btn"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/lightBlue"
        android:text="Button"
        android:layout_alignParentEnd="true" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/h_product_rec_view"
        android:layout_below="@id/h_scroll_viewall_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
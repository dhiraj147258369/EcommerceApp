<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/product_image"
        android:layout_margin="8dp"
        android:src="@drawable/phone_front"
        android:layout_width="80dp"
        android:layout_height="130dp"/>

    <TextView
        android:id="@+id/product_title"
        android:layout_toRightOf="@id/product_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:text="REDMI NOTE 7(BLACK)" />

    <LinearLayout
        android:id="@+id/ddd"
        android:layout_below="@id/product_title"
        android:layout_toRightOf="@id/product_image"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/badge"
            android:src="@drawable/ic_star"
            android:layout_width="20dp"
            android:layout_gravity="center_vertical"
            android:layout_height="20dp"/>

        <TextView
            android:id="@+id/free_coupens"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:text="free 2 coupens" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dd"
        android:layout_below="@id/product_title"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/slider_background"
        android:backgroundTint="#4CAF50"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_product_rating_mini_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:text="4.5" />

        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/ic_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="@color/white"
            android:layout_margin="2dp"/>
    </LinearLayout>


    <TextView
        android:id="@+id/product_price"
        android:layout_toRightOf="@id/product_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_below="@id/ddd"
        android:text="Rs.18999/-" />

    <TextView
        android:id="@+id/cutted_price"
        android:layout_toRightOf="@id/product_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_below="@id/product_price"
        android:text="Rs.18999/-" />

    <TextView
        android:id="@+id/total_ratings"
        android:layout_toRightOf="@id/product_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_below="@id/cutted_price"
        android:text="(27) ratings" />

    <TextView
        android:id="@+id/cod_available"
        android:layout_toRightOf="@id/product_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_below="@id/total_ratings"
        android:text="Cash on delivery available." />

    <ImageView
        android:id="@+id/delete"
        android:src="@drawable/ic_delete"
        android:layout_below="@+id/dd"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/price_cut"
        android:layout_width="80dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/product_image"
        android:layout_below="@id/product_price"
        android:background="?android:attr/listDivider" />


</RelativeLayout>